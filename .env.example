# AI-Enhanced Quiz Generator - Environment Configuration

# Application Settings
APP_NAME="AI-Enhanced Quiz Generator"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=ai_quiz_generator

# Alternative MongoDB configurations:
# For MongoDB Atlas (cloud):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
# For Docker MongoDB:
# MONGODB_URL=mongodb://mongo:27017

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# AI Service Configuration
# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Google Gemini API Key (optional, get from Google AI Studio)
GEMINI_API_KEY=your-gemini-api-key-here

# Question Generation Settings
DEFAULT_QUESTION_COUNT=5
DEFAULT_DIFFICULTY=intermediate
MAX_QUESTIONS_PER_QUIZ=50

# Performance & Caching
ENABLE_CACHING=true
CACHE_TTL=3600  # Cache time-to-live in seconds
MAX_CONCURRENT_REQUESTS=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # or 'text'
LOG_FILE_PATH=logs/app.log

# Redis Configuration (optional, for caching and session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["txt", "md", "docx", "pdf"]
UPLOAD_DIRECTORY=uploads/

# Email Configuration (for future user notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@quizgenerator.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Development Settings
RELOAD_ON_CHANGE=true
MOCK_AI_RESPONSES=false  # Set to true to use mock responses instead of AI APIs

# Production Settings (uncomment for production)
# DEBUG=false
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# RELOAD_ON_CHANGE=false

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300  # seconds

# Database Connection Pool Settings
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30

# AI Service Timeouts
AI_REQUEST_TIMEOUT=30
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=2

# Frontend Configuration (for CORS and API endpoints)
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000/api

# Testing Configuration
TEST_DATABASE_NAME=ai_quiz_generator_test
TEST_MODE=false

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION_DAYS=7

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=false  # Set to true in production with HTTPS

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_GUEST_MODE=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_ADVANCED_ANALYTICS=true

# Experimental Features
ENABLE_VOICE_QUESTIONS=false
ENABLE_COLLABORATIVE_QUIZZES=false
ENABLE_AI_TUTORING=false